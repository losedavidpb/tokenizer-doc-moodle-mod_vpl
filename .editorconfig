# This is the primary editor configuration
root = true

# General settings for each file
[*]
end_of_line = lf
charset = utf-8
indent_style = tab
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Python
[*.py]
indent_style = space
indent_size = 4

# reStructuredText
[*.rst]
indent_style = space
indent_size = 3
